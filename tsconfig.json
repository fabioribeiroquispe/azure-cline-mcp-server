{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "target": "ES2023",
    "lib": [
      "es2023", 
      "dom"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@tools/*": [
        "tools/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@utils": [
        "utils.js"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./docs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}