{
  "name": "azure-cline-mcp-server",
  "version": "2.0.0",
  "description": "MCP server for interacting with Azure DevOps",
  "license": "MIT",
  "author": "Fabio Ribeiro",
  "homepage": "https://github.com/fabioribeiroquispe/azure-cline-mcp-server",
  "bugs": "https://github.com/fabioribeiroquispe/azure-cline-mcp-server/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabioribeiroquispe/azure-cline-mcp-server.git"
  },
  "type": "module",
  "bin": {
    "mcp-server-azuredevops": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "preinstall": "npm config set registry https://registry.npmjs.org/",
    "prebuild": "node -p \"'export const packageVersion = ' + JSON.stringify(require('./package.json').version) + ';\\n'\" > src/version.ts && prettier --write src/version.ts",
    "validate-tools": "tsc --noEmit && node scripts/build-validate-tools.js",
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspect": "ALLOWED_ORIGINS=http://127.0.0.1:6274 npx @modelcontextprotocol/inspector node dist/index.js",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "eslint": "eslint",
    "eslint-fix": "eslint --fix",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "clean": "shx rm -rf dist",
    "test": "jest"
  },
  "overrides": {
    "get-intrinsic": "^1.3.0",
    "side-channel-map": "^1.0.1",
    "side-channel": "^1.1.0",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.15.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-header": "^3.1.1",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "uuid": "^11.1.0"
  },
  "dependencies": {
    "@azure/identity": "^4.11.1",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "azure-devops-extension-api": "^4.259.0",
    "azure-devops-extension-sdk": "^4.1.0",
    "azure-devops-node-api": "^15.1.1",
    "js-md4": "^0.3.2",
    "yargs": "^18.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}
